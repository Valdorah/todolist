{% extends 'base.html.twig' %}

{% block title %}
	{{todo.title}}
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('todo') }}
{% endblock %}

{% block body %}
	<div class="todo">
		<header>
			<h2><a href="{{ path('home') }}"><i class="fas fa-arrow-left"></i></a> {{todo.title}}</h2>
		</header>

		<section>
			<p>{{todo.content}}</p>
			<p><i class="fas fa-calendar-alt"></i> {{todo.createdAt|date("Y-m-d")}}</p>
			{% if todo.deadline %}
				<p><i class="fas fa-calendar-times"></i> {{todo.deadline|date("Y-m-d")}}</p>
			{% endif %}
		</section>

		<footer>
			<div>
				<a href="{{ path('modify-todo', {id: todo.id}) }}">Modify</a>
			</div>
			<div>
				<a id="delete-todo" data-id="{{todo.id}}" href="/">Delete</a>
				<span id="spinner"><i class="fas fa-spinner spinner"></i></span>
			</div>
			<p id="delete-error">An error has occurred.</p>
		</footer>
	</div>
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('todo') }}
{% endblock %}
